{
  "manifest_version": 3,
  "name": "Color Changer",
  "version": "1.0",
  "description": "A basic Chrome extension to change background color",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
